@model Validate.Models.ContactInfo
@{
    ViewBag.Title = "Info";
}
<script src="~/NicEditor/nicEdit.js"></script>
<script type="text/javascript">
    bkLib.onDomLoaded(function () {
        new nicEditor({ iconsPath: '/NicEditor/nicEditorIcons.gif' }).panelInstance('Notes');
    });
</script>
<h2>Info</h2>

@Html.ValidationSummary(true)
@using (Html.BeginForm("Validate2", "Validator"))
{
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group">
        <label>Confirm Email</label>
        @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmEmail)
    </div>

    <div class="form-group">
        <label>Moto Number</label>
        @Html.TextBoxFor(m => m.Moto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Moto)
    </div>

    <div class="form-group">
        <label>Credit Card Number</label>
        @Html.TextBoxFor(m => m.CreditCard, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CreditCard)
    </div>

    <div class="form-group">
        <label>Notes</label>
        @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(m => m.Notes)
    </div>

    <div class="form-group">
        <button class="btn btn-default">Validate</button>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}