
@{
    ViewBag.Title = "Index";
}

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Unit Price</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.UnitPrice</td>
                <td>@p.Image</td>
                <td><input type="number" value="@p.Quantity"></td>
                <td>@(p.Quantity*p.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>