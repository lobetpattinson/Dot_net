<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"rel="stylesheet"/>
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script> 
<style>
    btn-margin {
        margin-left: 10px;
    }
</style>


<table id="employeetable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Password</th>
            <th>FullName</th>
            <th>Email</th>
            <th>Mobile</th>
            <th></th>
        </tr>
    </thead>
</table>
<a class="btn btn-warning" onclick="PopupForm('@Url.Action("AddorEdit","AjaxRetrieveDatatable")')">Add New</a>
<script>
    var Popup, dataTable;
    $(function () {
        dataTable=$("#employeetable").DataTable({
            "ajax": {
                "url": "/AjaxRetrieveDatatable/Retrieve",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Id" },
                { "data": "Password" },
                { "data": "FullName" },
                { "data": "Email" },
                { "data": "Mobile" },
                {
                    "data": "Id", "render": function (data) {
                        return "<a class='btn btn-warning btn-sm'onclick=PopupForm('@Url.Action("Edit", "AjaxRetrieveDatatable")/" + data + "')> <i class='fas fa-edit'></i>Edit</a > <a class='btn btn-primary btn-sm ' style='margin-left:5px;' onclick=Delete(" + data+")><i class='fa fa-trash'></i>Delete</a>"
                    }}
            ]
        });
    });
    function PopupForm(url) {
        
        var formDiv = $('<div/>');
    
        $.get(url).done(function (response) {
         
            formDiv.html(response);
          
            Popup = formDiv.dialog({
                autoOpen: true, resizable: false,
                title: "Chao mung ham kiet",
                height: 500,
                width: 700,
                close: function () {
                    Popup.dialog('destroy').remove();
                }

            });
        });
    }
    function SubmitForm(form) {
        $.ajax({
            type: "post",
            url: form.action,
            data: $(form).serialize(),
            success: function (data) {
                debugger;
                if (data.success) {
                    debugger;
                    Popup.dialog('close');
                    dataTable.ajax.reload();
                    $.notify(data.message, {
                        globalPosition: "top-center",
                        className:"success"
                    })

                }
            }
        });
        return false;
    }
    function Delete(id) {
        if (confirm("Are you sure?")) {
            $.ajax({
                type: "POST",
                url: "/AjaxRetrieveDatatable/Delete/" + id,
                success: function (data) {
                    if (data.success) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top-center",
                            className: "success"
                        })
                    }
                }
            })

        }
    }
</script>
