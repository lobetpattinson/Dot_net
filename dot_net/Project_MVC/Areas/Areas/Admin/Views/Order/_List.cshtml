<div class="panel panel-default">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>CustomerId</th>
                <th>OrderDate</th>
                <th>Receiver</th>
                <th>Address</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in ViewBag.Items as List<EShop.Models.Order>)
            {
                <tr>
                    <td>@Item.Id</td>
                    <td>@Item.CustomerId</td>
                    <td>@Html.FormatValue(Item.OrderDate, "{0:MM/dd/yyyy}")</td>
                    <td>@Item.Receiver</td>
                    <td>@Item.Address</td>
                    <td>@Item.Amount</td>
                    <td>
                        <a href="@ViewBag.Controller/Edit/@Item.Id" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-edit"></span> Edit
                        </a>
                        <a href="@ViewBag.Controller//Delete/@Item.Id" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-trash"></span> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>