@model IEnumerable<DataSharing.Models.Product>
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<style>
    img{
        height:150px;
        max-width:96%;
    }
</style>

@foreach (var p in Model)
{
    <div class="col-sm-4">
        <div class="panel panel-default text-center">
            <div class="panel-heading">@p.Name</div>
            <div class="panel-body">
                <a href="@Url.Action("Detail", new { Id=p.Id})">
                    <img src="~/images/products/@p.Image" />
                </a>
            </div>
            <div class="panel-footer">
                @p.UnitPrice
                <a href="/ShoppingCart/Add/@p.Id" class="btn btn-default">Add To Cart</a>
            </div>
        </div>
    </div>
}