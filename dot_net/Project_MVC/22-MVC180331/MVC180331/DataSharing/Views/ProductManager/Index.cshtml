@model DataSharing.Models.Product
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Unit Price</label>
        @Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Image</label>
        @Html.TextBoxFor(m => m.Image, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Description</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows="3" })
    </div>

    <div class="form-group">
        <button class="btn btn-default" formaction="/ProductManager/Insert">Insert</button>
        <button class="btn btn-default" formaction="/ProductManager/Update">Update</button>
        <button class="btn btn-default" formaction="/ProductManager/Delete">Delete</button>
        <button class="btn btn-default" formaction="/ProductManager/Reset">Reset</button>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Unit Price</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in ViewBag.Items)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.UnitPrice</td>
                <td>@p.Image</td>
                <td>
                    <a href="/ProductManager/Edit/@p.Id" 
                       class="btn btn-sm btn-default">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>