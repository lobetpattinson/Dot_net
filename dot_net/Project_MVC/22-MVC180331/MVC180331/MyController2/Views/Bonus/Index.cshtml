
@{
    ViewBag.Title = "Index";
}

<h2>Bonus</h2>

<form action="/Bonus/Compute" method="post">
    <div class="form-group">
        <label>Lương</label>
        <input name="salary" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ngày sinh</label>
        <input name="birthday" class="form-control" />
    </div>
    <button class="btn btn-warning">OK</button>
</form>
<ul>
    <li>Lương: @ViewBag.Luong</li>
    <li>Thưởng: @ViewBag.Thuong</li>
    <li>Thu nhập: @ViewBag.ThucLinh</li>
</ul>

