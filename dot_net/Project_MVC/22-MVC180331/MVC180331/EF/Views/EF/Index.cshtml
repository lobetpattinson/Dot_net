@model EF.Models.Category
@{
    ViewBag.Title = "Index";
}

<h2>Category Manager</h2>
@TempData["Message"]
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Name VN</label>
        @Html.TextBoxFor(m => m.NameVN, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button formaction="@Url.Action("Insert")" class="btn btn-default">Insert</button>
        <button formaction="@Url.Action("Update")" class="btn btn-primary">Update</button>
        <button formaction="@Url.Action("Delete")" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-info">Reset</a>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Name VN</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in ViewBag.List as List<EF.Models.Category>)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.NameVN</td>
                <td>
                    <a href="@Url.Action("Edit", new { Id = c.Id })" class="btn btn-sm btn-default">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
