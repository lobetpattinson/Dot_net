<div class="product_grid">
    @foreach (var item in Model)
    {
        <div class="item_product">
            <span class="icon_sales" style="display: none">- 0%</span>
            <img src="~/Skin/images/icon_new.gif" class="icon_new" style="display: block">
            <div class="pdL10">
                <a href="/Home/Details/@item.ProductID">
                    <b>
                        @item.NameProduct
                    </b>
                </a>
                <br>
                Model:
                BLD-006
            </div>
            <div class="sepa">
            </div>
            <div class="img">
                <a href="images" class="highslide" onclick="return hs.expand(this)">
                    <img src="~/Skin/images/@item.ImagesMain" style="height:140px;width:187px;border-width:0px;">
                </a>
            </div>
            <div class="sepa">
            </div>
            <div class="pdL10 pdT10">
                <div class="pdL10-1">
                    Giá cũ: <span class="td_lt">
                        <b>
                            @item.Price
                        </b>
                        VNĐ
                    </span>
                    <br>
                    Giá mới: <b style="color: red;">
                        @item.PriceNews
                    </b>
                    VNĐ
                </div>
                <div class="pdL10-2" data-id="@item.ProductID">
                    <a href="/Home/Details/@item.ProductID" class="btn-01">
                        Chi tiết
                    </a>
                    <a class="btn-01 nn-add-to-cart">Mua hàng</a>
                </div>
            </div>
        </div>

    }
    <div class="clear">
    </div>
</div>


<span id="result">

</span>

<ul class="pager">
    <li><a href="0">|<<</a></li>
    <li><a href="--PageNo"><<</a></li>
    <li><a href="++PageNo">>></a></li>
    <li><a href="-1">>>|</a></li>
</ul>
<script>
        var PageNo = 0;
        var PageCount =@(ViewBag.PageCount);
        function fnLoadPage(){
            $.ajax({
                url:"/Home/Paginate",
                data:{PageNo:PageNo},
                success:function(response){
                    $("#result").html(response);
                }
            });
        }
</script>
<script>
    $(function(){
        fnLoadPage();
        $(".pager a").click(function(){
            eval("PageNo=(PageCount + " + $(this).attr("href") + ") % PageCount");
            fnLoadPage();
            return false;
        });
    })
</script>

