@{
    ViewBag.Title = "Login";
}

<h2>Change Password</h2>

@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Username</label>
        @Html.TextBox("Id", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Current Password</label>
        @Html.TextBox("Password", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>New Password</label>
        @Html.TextBox("Password1", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Confirm New Password</label>
        @Html.TextBox("Password2", null, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <button class="btn btn-danger">Change</button>
    </div>
}


